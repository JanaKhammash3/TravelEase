{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost;Database=TravelEaseDb;Trusted_Connection=True;TrustServerCertificate=True"
  },
  "Jwt": {
    "Key": "${JWT_KEY}",
    "Issuer": "TravelEaseAPI",
    "Audience": "TravelEaseClient",
    "ExpireHours": 6
  },
  "Email": {
    "From": "${EMAIL_FROM}",
    "SmtpHost": "${SMTP_HOST}",
    "SmtpPort": 2525,
    "Username": "${SMTP_USERNAME}",
    "Password": "${SMTP_PASSWORD}"
  },
  "Cloudinary": {
    "CloudName": "${CLOUDINARY_NAME}",
    "ApiKey": "${CLOUDINARY_KEY}",
    "ApiSecret": "${CLOUDINARY_SECRET}"
  },
  "Stripe": {
    "PublishableKey": "${STRIPE_PUBLISHABLE_KEY}",
    "SecretKey": "${STRIPE_SECRET_KEY}"
  }
}
